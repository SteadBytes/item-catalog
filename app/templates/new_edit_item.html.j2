<h1>{{page_heading}}</h1>
{% with messages = get_flashed_messages() %}
  {% if messages %}
    <ul class=flashes>
    {% for message in messages %}
      <li>{{ message }}</li>
    {% endfor %}
    </ul>
  {% endif %}
{% endwith %}
<form action="{{url_for('catalog.new_item')}}" method="post">
  <div>
    <label for="titleInput">Title</label>
    <br>
    <input type="text" id="titleInput" name="title" value="{{title}}">
  </div>
  <br>
  <div>
    <label for="descriptionInput">Description</label>
    <br>
    <textarea name="description" id="descriptionInput">{{description}}</textarea>
  </div>
  <br>
  <div >
    <label for="categoryInput">Category</label>
    <br>
    <select name='category_id_inp' id="categoryInput">
      <option value="" disabled selected>Select a category</option>
      {% for i in categories %}
      <option value="{{i.id}}" {% if i.id==category_id %} selected="selected" {% endif %}>{{i.name}}</option>
      {% endfor %}
    </select>
  </div>
  <br>
  <button type="submit" name="button">Submit</button>
</form>
