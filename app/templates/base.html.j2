<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome CDN -->
    <script src="https://use.fontawesome.com/488e44b3c7.js"></script>
    <!-- Foundation Styles -->
    <link rel="stylesheet" href="{{url_for('static', filename='css/foundation.min.css')}}">
    <!-- Roboto Font for gsignin button -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:500" rel="stylesheet">
    <!-- Custom styles -->
    <link rel="stylesheet" href="{{url_for('static',filename='css/app.css')}}">
    <title>Catalog App</title>
  </head>
  <body>

      {%include "partials/categories_offcanvas.html.j2"%}
      <div class="off-canvas-content">
        {% include "partials/header.html.j2" %}
        <br>
        {% with messages = get_flashed_messages() %}
          {% if messages %}
          <div class="row">
            <div class="columns">
              {% for message in messages %}
              <div class="callout success">
                {{ message }}
              </div>
              {% endfor %}
            </div>
          </div>
          {% endif %}
        {% endwith %}
        {% block content %}
        {% endblock %}
      </div>

    <!-- Foundation/Jquery JS -->
    <script src="{{url_for('static', filename='js/vendor/jquery.js')}}"></script>
    <script src="{{url_for('static', filename='js/vendor/what-input.js')}}"></script>
    <script src="{{url_for('static', filename='js/vendor/foundation.min.js')}}"></script>
      <script src="{{url_for('static', filename='js/app.js')}}"></script>
    <script>
      $(document).foundation();
   </script>
  </body>
</html>
